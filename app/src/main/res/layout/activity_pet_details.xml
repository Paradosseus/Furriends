<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PetDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPetDetailImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="image"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPetDetailImage">

                <TextView
                    android:id="@+id/tvPetDetailBreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breed" />

                <TextView
                    android:id="@+id/tvPetDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="35sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPetDetailGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" | " />

                    <TextView
                        android:id="@+id/tvPetDetailColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPetDetailLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPetDetailAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:text="About"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


            <TextView
                android:id="@+id/tvPetDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Description..."
                app:layout_constraintBottom_toTopOf="@+id/btnAdopt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPetDetailAboutTitle"
                app:layout_constraintVertical_bias="0.0" />

            <Button

                android:id="@+id/btnAdopt"
                android:layout_width="242dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"
                android:text="Adopt"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton

                android:id="@+id/ibAddtoFavorite"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/icon_button_background"
                android:backgroundTint="@color/gray"
                android:src="@drawable/favorite_icon"
                app:layout_constraintBottom_toBottomOf="@+id/btnAdopt"
                app:layout_constraintStart_toEndOf="@+id/btnAdopt"
                app:layout_constraintTop_toTopOf="@+id/btnAdopt" />

            <ImageButton

                android:id="@+id/ibMessageUser"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/icon_button_background"
                android:backgroundTint="@color/green"
                android:src="@drawable/message_icon"
                app:layout_constraintBottom_toBottomOf="@+id/ibAddtoFavorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ibAddtoFavorite"
                app:layout_constraintTop_toTopOf="@+id/ibAddtoFavorite" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>